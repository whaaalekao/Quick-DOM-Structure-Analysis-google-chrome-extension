{
  "manifest_version": 3,
  "name": "DOM 節點助手",
  "version": "1.1",
  "description": "滑鼠懸停時顯示 DOM 節點信息，並將詳細信息顯示在右側彈窗。",
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [  
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    
    "default_title": "顯示 DOM 節點助手"
  }
}
